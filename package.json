{
  "name": "@zdavison/pollytest",
  "version": "0.1.2",
  "description": "Batteries included HAR snapshot testing with polly.js.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "pollytest": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "examples"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts ./src/runner.ts ./src/cli.ts --outdir ./dist --target node --external @pollyjs/core --external @pollyjs/adapter-fetch --external @pollyjs/persister-fs && tsc --emitDeclarationOnly",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "pollytest": "bun ./src/cli.ts"
  },
  "keywords": [
    "testing",
    "http",
    "recording",
    "replay",
    "polly",
    "bun",
    "integration-tests",
    "fixtures"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mm-zacharydavison/pollytest.git"
  },
  "dependencies": {
    "@pollyjs/adapter-fetch": "^6.0.6",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister-fs": "^6.0.6"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  }
}
